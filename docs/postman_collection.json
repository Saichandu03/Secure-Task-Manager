{
  "info": {
    "name": "Secure Task Manager API",
    "_postman_id": "secure-task-manager-demo",
    "description": "Postman collection for Secure Task Manager (local demo). Import to test auth and tasks endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Postman User\",\n  \"email\": \"postman@example.com\",\n  \"password\": \"Pass123!\"\n}"
            },
            "url": { "raw": "http://localhost:5000/api/v1/auth/register", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","v1","auth","register"] }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"postman@example.com\",\n  \"password\": \"Pass123!\"\n}"
            },
            "url": { "raw": "http://localhost:5000/api/v1/auth/login", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","v1","auth","login"] }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:5000/api/v1/auth/me", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","v1","auth","me"] }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"title\": \"Example Task\",\n  \"description\": \"Created via Postman\",\n  \"status\": \"todo\"\n}" },
            "url": { "raw": "http://localhost:5000/api/v1/tasks", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","v1","tasks"] }
          }
        },
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:5000/api/v1/tasks", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","v1","tasks"] }
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"title\": \"Updated from Postman\",\n  \"completed\": true\n}" },
            "url": { "raw": "http://localhost:5000/api/v1/tasks/:id", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","v1","tasks",":id"] }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "url": { "raw": "http://localhost:5000/api/v1/tasks/:id", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","v1","tasks",":id"] }
          }
        }
      ]
    }
  ]
}
