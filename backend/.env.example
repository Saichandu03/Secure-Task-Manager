PORT=5000
NODE_ENV=development
JWT_SECRET=replace_this_with_a_strong_secret
JWT_EXPIRES_IN=7d
DEV_IN_MEMORY=1
# Cache settings (used for in-process LRU when DEV_IN_MEMORY=1)
CACHE_MAX=1000
CACHE_TTL=60
# When deploying with a separate frontend (Vercel), set FRONTEND_ORIGIN
# to the exact frontend origin so CORS returns a matching Access-Control-Allow-Origin
# Example:
# FRONTEND_ORIGIN=https://secure-task-manager-mu.vercel.app
